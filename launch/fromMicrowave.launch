<launch>
        <machine name="base" address="microwave" env-loader="~/catkin_ws/devel_cb/env.sh" default="true" />
        <machine name="catbot" address="catbot" env-loader="~/catkin_ws/devel/env.sh" user="catbot" />


        <node name="thermal" pkg="imageTutorial" type="simpleThermal.py" machine="catbot" />
        <node name="joy" pkg="joy" type="joy_node" machine="base" />
        <node name="rcNode" pkg="imageTutorial" type="rc_node" machine="base" />
         <node name="procNode" pkg="imageTutorial" type="image_processing_node" machine="catbot" />
	<node name="camera" pkg="rpi_cam" type="camera_node" machine="catbot"/>
	<node pkg="rosserial_python" type="serial_node.py" name="serial_node" machine="catbot" args="_port:=/dev/ttyACM1 _baud:=115200"/>

        <node name="rviz" pkg="rviz" type="rviz" args="-d /home/josh/catkin_ws/src/imageTutorial/rviz/view.rviz" />

</launch>
